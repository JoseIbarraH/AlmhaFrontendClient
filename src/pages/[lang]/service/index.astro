---
import Layout from "@/layouts/Layout.astro";
import ImgHeader from "@/assets/images/abdominoplastia.jpg";
import Header from "@/components/partials/service/Header.astro";
import Icon from "@/components/ui/Icon.astro";
---

<Layout>
  <div class="bg-[#FFF9F6]">
    <!-- Hero Section -->
    <section class="relative h-[70vh] overflow-hidden">
      <Header image={ImgHeader.src} />
    </section>

    <section
      class="z-40 bg-[#FFF9F6]/95 backdrop-blur-md border-b-2 border-[#D6C4B6]/30 shadow-lg"
    >
      <div class="max-w-7xl mx-auto px-6 py-4">
        <div
          class="flex flex-col md:flex-row gap-4 items-center justify-between"
        >
          <!-- Búsqueda -->
          <div class="relative w-full md:w-96">
            <input
              type="search"
              placeholder="Buscar procedimiento..."
              class="w-full px-5 py-3 pl-12 bg-white border-2 border-[#D6C4B6] rounded-xl text-[#513A31] placeholder-[#7D6A5D] focus:outline-none focus:border-[#FEEBDD] transition-all"
            />
            <Icon name="Search" class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-[#7D6A5D]"/>
          </div>

          <!-- Filtros -->
          <div class="flex gap-3 overflow-x-auto pb-2 md:pb-0 w-full md:w-auto">
            <button
              class="px-4 py-2 bg-[#513A31] text-[#FEEBDD] rounded-lg font-medium whitespace-nowrap"
            >
              Todos
            </button>
            <button
              class="px-4 py-2 bg-white border-2 border-[#D6C4B6] text-[#7D6A5D] hover:bg-[#FEEBDD] hover:border-[#FEEBDD] hover:text-[#513A31] rounded-lg font-medium whitespace-nowrap transition-all"
            >
              Facial
            </button>
            <button
              class="px-4 py-2 bg-white border-2 border-[#D6C4B6] text-[#7D6A5D] hover:bg-[#FEEBDD] hover:border-[#FEEBDD] hover:text-[#513A31] rounded-lg font-medium whitespace-nowrap transition-all"
            >
              Corporal
            </button>
            <button
              class="px-4 py-2 bg-white border-2 border-[#D6C4B6] text-[#7D6A5D] hover:bg-[#FEEBDD] hover:border-[#FEEBDD] hover:text-[#513A31] rounded-lg font-medium whitespace-nowrap transition-all"
            >
              Reconstructivo
            </button>
          </div>
        </div>
      </div>
    </section>

    <!-- Grid de Procedimientos -->
    <section class="max-w-7xl mx-auto px-6 py-16">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Card 1 - Featured -->
        <div
          class="group relative bg-white rounded-2xl overflow-hidden shadow-xl hover:shadow-2xl transition-all duration-300 hover:-translate-y-2 lg:col-span-2 lg:row-span-2"
        >
          <div class="relative h-80 lg:h-full overflow-hidden">
            <img
              src="https://images.unsplash.com/photo-1629909613654-28e377c37b09?w=800"
              alt="Rinoplastia"
              class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
            />
            <div
              class="absolute inset-0 bg-linear-to-t from-[#513A31]/90 via-[#513A31]/40 to-transparent"
            >
            </div>

            <!-- Badge destacado -->
            <span
              class="absolute top-4 right-4 px-4 py-2 bg-[#FEEBDD] text-[#513A31] rounded-full text-sm font-bold shadow-lg"
            >
              Más Popular
            </span>
          </div>

          <div class="absolute bottom-0 left-0 right-0 p-8 text-[#FFF9F6]">
            <span
              class="inline-block px-3 py-1 bg-[#FEEBDD]/20 backdrop-blur-sm text-[#FEEBDD] rounded-full text-xs font-semibold mb-3"
            >
              Facial
            </span>
            <h3 class="text-3xl font-bold mb-3">Rinoplastia</h3>
            <p class="text-[#FEEBDD]/90 mb-6 line-clamp-2">
              Mejora la forma y función de tu nariz con técnicas avanzadas y
              resultados naturales
            </p>

            <div class="flex items-center justify-between">
              <div class="flex items-center gap-4 text-sm">
                <span class="flex items-center gap-1">
                  <svg
                    class="w-4 h-4"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  2-3 horas
                </span>
                <span class="flex items-center gap-1">
                  <svg
                    class="w-4 h-4"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  7-10 días
                </span>
              </div>
              <button
                class="px-6 py-3 bg-[#FEEBDD] text-[#513A31] font-semibold rounded-xl hover:bg-[#FFF9F6] transition-all flex items-center gap-2"
              >
                Ver más
                <svg
                  class="w-4 h-4"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 5l7 7-7 7"></path>
                </svg>
              </button>
            </div>
          </div>
        </div>

        <!-- Card 2 -->
        <div
          class="group relative bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-2"
        >
          <div class="relative h-64 overflow-hidden">
            <img
              src="https://images.unsplash.com/photo-1612349317150-e413f6a5b16d?w=600"
              alt="Liposucción"
              class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
            />
            <div
              class="absolute inset-0 bg-linear-to-t from-[#513A31]/80 to-transparent"
            >
            </div>
          </div>

          <div class="p-6">
            <span
              class="inline-block px-3 py-1 bg-[#FEEBDD]/20 text-[#7D6A5D] rounded-full text-xs font-semibold mb-2"
            >
              Corporal
            </span>
            <h3 class="text-2xl font-bold text-[#513A31] mb-2">Liposucción</h3>
            <p class="text-[#7D6A5D] mb-4 text-sm line-clamp-2">
              Elimina grasa localizada y moldea tu figura con resultados
              precisos
            </p>

            <div
              class="flex items-center justify-between text-xs text-[#7D6A5D] mb-4"
            >
              <span class="flex items-center gap-1">
                <svg
                  class="w-4 h-4"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                2-4 horas
              </span>
              <span class="flex items-center gap-1">
                <svg
                  class="w-4 h-4"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                5-7 días
              </span>
            </div>

            <button
              class="w-full px-4 py-3 bg-[#513A31] text-[#FEEBDD] font-semibold rounded-xl hover:bg-[#7D6A5D] transition-all"
            >
              Más información
            </button>
          </div>
        </div>

        <!-- Card 3 -->
        <div
          class="group relative bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-2"
        >
          <div class="relative h-64 overflow-hidden">
            <img
              src="https://images.unsplash.com/photo-1576091160399-112ba8d25d1d?w=600"
              alt="Aumento de Senos"
              class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
            />
            <div
              class="absolute inset-0 bg-linear-to-t from-[#513A31]/80 to-transparent"
            >
            </div>
          </div>

          <div class="p-6">
            <span
              class="inline-block px-3 py-1 bg-[#FEEBDD]/20 text-[#7D6A5D] rounded-full text-xs font-semibold mb-2"
            >
              Corporal
            </span>
            <h3 class="text-2xl font-bold text-[#513A31] mb-2">
              Aumento de Senos
            </h3>
            <p class="text-[#7D6A5D] mb-4 text-sm line-clamp-2">
              Logra el volumen y forma que deseas con implantes de última
              generación
            </p>

            <div
              class="flex items-center justify-between text-xs text-[#7D6A5D] mb-4"
            >
              <span class="flex items-center gap-1">
                <svg
                  class="w-4 h-4"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                1-2 horas
              </span>
              <span class="flex items-center gap-1">
                <svg
                  class="w-4 h-4"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                7-14 días
              </span>
            </div>

            <button
              class="w-full px-4 py-3 bg-[#513A31] text-[#FEEBDD] font-semibold rounded-xl hover:bg-[#7D6A5D] transition-all"
            >
              Más información
            </button>
          </div>
        </div>

        <!-- Card 4 -->
        <div
          class="group relative bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-2"
        >
          <div class="relative h-64 overflow-hidden">
            <img
              src="https://images.unsplash.com/photo-1559839734-2b71ea197ec2?w=600"
              alt="Abdominoplastia"
              class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
            />
            <div
              class="absolute inset-0 bg-linear-to-t from-[#513A31]/80 to-transparent"
            >
            </div>
          </div>

          <div class="p-6">
            <span
              class="inline-block px-3 py-1 bg-[#FEEBDD]/20 text-[#7D6A5D] rounded-full text-xs font-semibold mb-2"
            >
              Corporal
            </span>
            <h3 class="text-2xl font-bold text-[#513A31] mb-2">
              Abdominoplastia
            </h3>
            <p class="text-[#7D6A5D] mb-4 text-sm line-clamp-2">
              Redefine tu abdomen eliminando exceso de piel y grasa acumulada
            </p>

            <div
              class="flex items-center justify-between text-xs text-[#7D6A5D] mb-4"
            >
              <span class="flex items-center gap-1">
                <svg
                  class="w-4 h-4"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                3-5 horas
              </span>
              <span class="flex items-center gap-1">
                <svg
                  class="w-4 h-4"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                14-21 días
              </span>
            </div>

            <button
              class="w-full px-4 py-3 bg-[#513A31] text-[#FEEBDD] font-semibold rounded-xl hover:bg-[#7D6A5D] transition-all"
            >
              Más información
            </button>
          </div>
        </div>

        <!-- Card 5 -->
        <div
          class="group relative bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-2"
        >
          <div class="relative h-64 overflow-hidden">
            <img
              src="https://images.unsplash.com/photo-1526758097130-bab247274f58?w=600"
              alt="Blefaroplastia"
              class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
            />
            <div
              class="absolute inset-0 bg-linear-to-t from-[#513A31]/80 to-transparent"
            >
            </div>
          </div>

          <div class="p-6">
            <span
              class="inline-block px-3 py-1 bg-[#FEEBDD]/20 text-[#7D6A5D] rounded-full text-xs font-semibold mb-2"
            >
              Facial
            </span>
            <h3 class="text-2xl font-bold text-[#513A31] mb-2">Blefaroplastia</h3>
            <p class="text-[#7D6A5D] mb-4 text-sm line-clamp-2">
              Rejuvenece tu mirada eliminando exceso de piel en los párpados
            </p>

            <div
              class="flex items-center justify-between text-xs text-[#7D6A5D] mb-4"
            >
              <span class="flex items-center gap-1">
                <svg
                  class="w-4 h-4"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                1-2 horas
              </span>
              <span class="flex items-center gap-1">
                <svg
                  class="w-4 h-4"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                5-7 días
              </span>
            </div>

            <button
              class="w-full px-4 py-3 bg-[#513A31] text-[#FEEBDD] font-semibold rounded-xl hover:bg-[#7D6A5D] transition-all"
            >
              Más información
            </button>
          </div>
        </div>

        <!-- Card 6 -->
        <div
          class="group relative bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-2"
        >
          <div class="relative h-64 overflow-hidden">
            <img
              src="https://images.unsplash.com/photo-1487412720507-e7ab37603c6f?w=600"
              alt="Lifting Facial"
              class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
            />
            <div
              class="absolute inset-0 bg-linear-to-t from-[#513A31]/80 to-transparent"
            >
            </div>
          </div>

          <div class="p-6">
            <span
              class="inline-block px-3 py-1 bg-[#FEEBDD]/20 text-[#7D6A5D] rounded-full text-xs font-semibold mb-2"
            >
              Facial
            </span>
            <h3 class="text-2xl font-bold text-[#513A31] mb-2">Lifting Facial</h3>
            <p class="text-[#7D6A5D] mb-4 text-sm line-clamp-2">
              Recupera la firmeza y juventud de tu rostro con técnicas modernas
            </p>

            <div
              class="flex items-center justify-between text-xs text-[#7D6A5D] mb-4"
            >
              <span class="flex items-center gap-1">
                <svg
                  class="w-4 h-4"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                3-4 horas
              </span>
              <span class="flex items-center gap-1">
                <svg
                  class="w-4 h-4"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                14-21 días
              </span>
            </div>

            <button
              class="w-full px-4 py-3 bg-[#513A31] text-[#FEEBDD] font-semibold rounded-xl hover:bg-[#7D6A5D] transition-all"
            >
              Más información
            </button>
          </div>
        </div>
      </div>

      <!-- Call to Action -->
      <div
        class="mt-16 bg-linear-to-br from-[#513A31] to-[#7D6A5D] rounded-3xl p-12 relative overflow-hidden"
      >
        <div
          class="absolute top-0 right-0 w-96 h-96 bg-[#FEEBDD]/10 rounded-full blur-3xl"
        >
        </div>
        <div
          class="absolute bottom-0 left-0 w-72 h-72 bg-[#FEEBDD]/5 rounded-full blur-2xl"
        >
        </div>

        <div class="relative z-10 text-center max-w-3xl mx-auto">
          <h2 class="text-4xl font-bold text-[#FFF9F6] mb-4">
            ¿Listo para dar el siguiente paso?
          </h2>
          <p class="text-xl text-[#FEEBDD]/90 mb-8">
            Agenda tu consulta gratuita y descubre cómo podemos ayudarte a
            alcanzar tus objetivos
          </p>
          <div class="flex flex-wrap gap-4 justify-center">
            <button
              class="px-8 py-4 bg-[#FEEBDD] text-[#513A31] font-bold rounded-xl hover:bg-[#FFF9F6] transition-all shadow-lg text-lg"
            >
              Agendar consulta
            </button>
            <button
              class="px-8 py-4 bg-white/10 backdrop-blur-sm text-[#FFF9F6] font-bold rounded-xl hover:bg-white/20 transition-all border-2 border-[#FEEBDD]/30 text-lg"
            >
              Contactar por WhatsApp
            </button>
          </div>
        </div>
      </div>
    </section>
  </div>
</Layout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
