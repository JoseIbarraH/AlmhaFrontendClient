    <!-- CONTACTO -->
    <section class="py-24 bg-[#FFF9F6]">
      <div class="max-w-7xl mx-auto px-6 grid lg:grid-cols-5 gap-14">
        <!-- FORMULARIO -->
        <div class="lg:col-span-3">
