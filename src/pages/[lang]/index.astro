<script>
  function initParallaxIndicator() {
    const parallaxNav = document.querySelector("#parallax-nav");
    const parallaxWrapper = document.querySelector(".parallax-wrapper");
    const elements = document.querySelectorAll(
      "#parallax1, #parallax2, #parallax3",
    );
    const links = document.querySelectorAll(".parallax-link");

    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          const targetId = entry.target.id;
          const dot = document.querySelector(`#dot-${targetId}`);
          const pulse = dot?.nextElementSibling;

          if (entry.isIntersecting) {
            dot?.classList.add("active");
            dot?.classList.remove("bg-white/30");
            dot?.classList.add(
              "bg-[#DCBE9A]",
              "scale-150",
              "ring-[#DCBE9A]/60",
            );
            pulse?.classList.add("animate-ping");
          } else {
            dot?.classList.remove(
              "active",
              "bg-[#DCBE9A]",
              "scale-150",
              "ring-[#DCBE9A]/60",
            );
            dot?.classList.add("bg-white/30");
            pulse?.classList.remove("animate-ping");
          }
        });
      },
      {
        threshold: 0.5,
      },
    );

    elements.forEach((el) => observer.observe(el));

    if (parallaxWrapper && parallaxNav) {
      const visibilityObserver = new IntersectionObserver(
        (entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              parallaxNav.classList.remove("opacity-0", "invisible");
              parallaxNav.classList.add("opacity-100", "visible");
            } else {
              parallaxNav.classList.remove("opacity-100", "visible");
              parallaxNav.classList.add("opacity-0", "invisible");
            }
          });
        },
        {
          rootMargin: "0px",
          threshold: 0,
        },
      );

      visibilityObserver.observe(parallaxWrapper);
    }

    links.forEach((link) => {
      link.addEventListener("click", (e) => {
        e.preventDefault();
        const targetId = link.getAttribute("data-target");
        const targetSection = document.getElementById(targetId || "");

        if (targetSection) {
          targetSection.scrollIntoView({
            behavior: "smooth",
            block: "center",
          });
        }
      });
    });
  }

  // ... (Tu código existente de inicialización y astro:page-load) ...
  if (document.readyState === "loading") {
    document.addEventListener("DOMContentLoaded", initParallaxIndicator);
  } else {
    initParallaxIndicator();
  }

  document.addEventListener("astro:page-load", initParallaxIndicator);
</script>

<style>
  .parallax-wrapper {
    position: relative;
  }

  /* Animación de glow para indicador activo */
  .indicator-dot.active {
    box-shadow:
      0 0 20px rgba(220, 190, 154, 0.8),
      0 0 40px rgba(220, 190, 154, 0.4);
  }

  /* Animación de pulso */
  @keyframes ping {
    75%,
    100% {
      transform: scale(2);
      opacity: 0;
    }
  }

  .animate-ping {
    animation: ping 1.5s cubic-bezier(0, 0, 0.2, 1) infinite;
  }

  /* Efecto de brillo en hover */
  .parallax-link:hover .indicator-dot {
    box-shadow: 0 0 15px rgba(220, 190, 154, 0.5);
  }

  /* Transiciones suaves */
  .indicator-dot {
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* Responsive: ocultar en móvil/tablet */
