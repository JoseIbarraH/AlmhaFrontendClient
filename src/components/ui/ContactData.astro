---
import Icon from "./Icon.astro";

const { icon, title, value } = Astro.props;
---

<div class="flex items-start">
  <div
    class="w-12 h-12 bg-gold rounded-full flex items-center justify-center mr-4 shrink-0 text-white hover:text-[#DCBE9A]"
  >
    <Icon name={icon} />
  </div>
  <div>
    <div
      class="font-semibold text-dark text-[20px] menu-link text-white text-2xl md:text-2xl lg:text-2xl
             hover:text-[#DCBE9A] transition-all duration-300
             opacity-0"
    >
      {title}
    </div>
    <div
      class="text-gray-600 text-[20px] menu-link text-2xl md:text-2xl lg:text-2xl font-bold
             hover:text-[#DCBE9A] transition-all duration-300
             opacity-0"
    >
      {value}
    </div>
  </div>
</div>

<style>
  .menu-link {
    position: relative;
  }

  .menu-link::after {
    content: "";
    position: absolute;
    bottom: -8px;
    left: 0;
    width: 0;
    height: 3px;
    background: #dcbe9a;
    transition: width 0.4s ease;
  }
</style>
