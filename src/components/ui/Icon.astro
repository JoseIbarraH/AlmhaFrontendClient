---
import * as icons from "lucide-static";

interface Props {
  name: string;
  class?: string;
  size?: number;
}

const { name, class: className = "", size = 24 } = Astro.props;

// Convertir el nombre a PascalCase para buscar en lucide-static
const iconName = name
  .split('-')
  .map(word => word.charAt(0).toUpperCase() + word.slice(1))
  .join('');

// Obtener el SVG del ícono
const svg = icons[iconName as keyof typeof icons];

if (!svg) {
  console.warn(`Ícono "${name}" (${iconName}) no encontrado en lucide-static`);
}
---

{svg ? (
  <Fragment set:html={svg} />
) : (
  <div
    class={`inline-block ${className}`}
    style={`width: ${size}px; height: ${size}px;`}
    title={`Ícono ${name} no encontrado`}
  />
)}

<style>
  :global(svg) {
    width: 100%;
    height: 100%;
  }
</style>
