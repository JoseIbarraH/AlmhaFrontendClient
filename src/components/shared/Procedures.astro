---
interface Props {
  image?: string;
  title?: string;
  description?: string;
  href?: string;
}

const {
  image = "/src/assets/images/abdominoplastia.jpg",
  title = "Titulo",
  description = "Descripcion",
  href = "#",
} = Astro.props;

const Tag = href ? "a" : "div";
---

<component
  is={Tag}
  href={href}
  class="group relative w-full overflow-hidden rounded-xl shadow-lg hover:shadow-2xl transition-all duration-500 cursor-pointer block"
>
  <!-- Imagen con efecto zoom -->
  <div class="relative w-full aspect-4/3 overflow-hidden">
    <img
      src={image}
      alt={title}
      class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
    />

    <!-- Overlay que se oscurece en hover -->
    <div
      class="absolute inset-0 bg-linear-to-t from-black/60 via-transparent to-transparent group-hover:from-black/80 group-hover:via-black/40 transition-all duration-500"
    >
    </div>
  </div>

  <!-- Contenedor de contenido que se eleva -->
  <div
    class="absolute bottom-0 left-0 right-0 p-6 transform translate-y-0 group-hover:-translate-y-4 transition-all duration-500"
  >
    <!-- Título - siempre visible -->
    <h3 class="text-white text-2xl md:text-3xl font-bold mb-3 relative z-10">
      {title}
    </h3>

    <!-- Contenido que aparece en hover -->
    <div
      class="overflow-hidden max-h-0 group-hover:max-h-48 transition-all duration-500 ease-out"
    >
      <!-- Descripción -->
      <p
        class="text-neutral-200 text-sm md:text-base mb-4 opacity-0 group-hover:opacity-100 transition-opacity duration-500 delay-100"
      >
        {description}
      </p>

      <!-- Botón -->
      {
        href && (
          <div
            class="inline-flex items-center gap-2 px-4 py-2 bg-[#DCBE9A] text-[#202020] rounded-lg font-semibold text-sm
                    opacity-0 group-hover:opacity-100 transition-all duration-500 delay-200
                    hover:bg-[#E8CBA8] transform hover:scale-105"
          >
            <span>Leer más</span>
            <svg
              class="w-4 h-4 transition-transform duration-300 group-hover:translate-x-1"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17 8l4 4m0 0l-4 4m4-4H3"
              />
            </svg>
          </div>
        )
      }
    </div>

    <!-- Borde decorativo inferior -->
    <div
      class="absolute bottom-0 left-0 w-full h-1 bg-linear-to-r from-[#DCBE9A] via-[#DCBE9A]/50 to-transparent
                scale-x-0 group-hover:scale-x-100 origin-left transition-transform duration-700"
    >
    </div>
  </div>

  <!-- Efecto de brillo -->
  <div
    class="absolute inset-0 -translate-x-full group-hover:translate-x-full transition-transform duration-1000 ease-out
              bg-linear-to-r from-transparent via-white/10 to-transparent pointer-events-none"
  >
  </div>
</component>
