---
import Procedures from "@/components/shared/Procedures.astro";
import LanguageSwitcher from "../ui/LanguageSwitcher.astro";
import ContacButton from "../ui/ContacButton.astro";
import { getRelativeLocaleUrl } from "astro:i18n";
import ContactData from "../ui/ContactData.astro";
import Carousel from "../shared/Carousel.astro";
import { loadTranslations } from "@/lib/i18n";
import Logo from "../ui/Logo.astro";
import Icon from "../ui/Icon.astro";
import type { TopServices } from "@/types/design"

const currentLang = Astro.currentLocale || "es";
const t = await loadTranslations(currentLang);

const menuItems = [
  { href: "/", label: t.navbar.links.home || "Inicio" },
  { href: "/service", label: t.navbar.links.service || "Procedimientos" },
  { href: "/about", label: t.navbar.links.about || "Nosotros" },
  { href: "/contact", label: t.navbar.links.contact || "Contacto" },
  { href: "/blog", label: t.navbar.links.blog || "Blog" },
];

interface Props {
  images?: any[];
  topServices?: TopServices[];
}

const { images = [], topServices: topServices = [] } = Astro.props as Props;

console.log('Top: ', topServices)
---

<div class="relative">
  <!-- Navbar Principal -->
  <nav
    id="main-navbar"
    class="w-full border-b border-[#7D6A5D]/30 bg-linear-to-r from-[#513A31] to-[#7D6A5D] shadow-xl shadow-black/30 fixed top-0 z-50 backdrop-blur-md bg-opacity-95 transition-transform duration-300 ease-in-out"
  >
    <div
      class="container mx-auto relative flex items-center justify-between py-4 px-6 lg:px-8"
    >
      <!-- Left: Mobile hamburger -->
      <button
        id="hamburger-btn"
        class="hamburger-btn flex items-center transition-colors rounded-lg px-2 py-1 -ml-2 z-50 hover:bg-[#FEEBDD]/10"
        type="button"
        aria-label="Toggle menu"
        aria-expanded="false"
      >
        <span class="hamburger hamburger--spin scale-75" aria-hidden="true">
          <span class="hamburger-box">
            <span class="hamburger-inner"></span>
          </span>
        </span>
        <span class="text-[#FFF9F6] text-sm font-medium">{t.navbar.menu}</span>
      </button>

      <!-- Center: LOGO SIEMPRE CENTRADO -->
      <div
        class="absolute left-1/2 -translate-x-1/2 max-w-[200px] md:max-w-[250px] z-40"
      >
        <div class="overflow-hidden">
          <Logo
            class="text-[#FEEBDD] hover:text-[#FFF9F6] transition-colors w-full h-auto max-h-10 object-contain"
          />
        </div>
      </div>

      <!-- Right: Desktop items -->
      <div class="md:flex items-center gap-6 ml-auto z-40">
        <LanguageSwitcher />
        <div class="hidden md:flex items-center gap-6 ml-auto z-40">
          <ContacButton />
        </div>
      </div>
    </div>
  </nav>

  <!-- Menú Fullscreen -->
  <div
    id="fullscreen-menu"
    class="fixed left-0 right-0 bg-linear-to-br from-[#513A31]/98 to-[#7D6A5D]/98 backdrop-blur-md z-40
           opacity-0 invisible transition-all duration-500 ease-out overflow-hidden"
    style="top: var(--navbar-height, 73px); bottom: 0;"
  >
    <!-- Grid responsivo -->
    <div class="grid grid-cols-1 md:grid-cols-4 h-full w-full">
      <!-- Columna 1: Carousel - OCULTA EN MÓVIL -->
      <div class="h-full w-full overflow-hidden hidden md:block relative">
        <div
          class="absolute inset-0 bg-linear-to-r from-transparent to-[#513A31]/30 z-10"
        >
        </div>
        <Carousel buttonDown={true} slides={images} />
      </div>

      <!-- Columna 2: Links del menú - VISIBLE EN MÓVIL -->
      <div
        class="h-full flex flex-col items-start justify-center gap-4 md:gap-6 px-6 md:px-10 relative mt-10 md:mt-0"
      >
        <div>
          <span
            class="text-[#FEEBDD] text-xs md:text-sm font-semibold tracking-widest uppercase"
          >
            {t.navbar.navigation.title}
          </span>
          <h2 class="text-xl md:text-2xl font-bold text-[#FFF9F6] mt-2 md:mt-4">
            {t.navbar.navigation.subtitle}
          </h2>
        </div>

        {
          menuItems.map((item, index) => (
            <a
              href={getRelativeLocaleUrl(currentLang, item.href)}
              class="menu-link-wrapper group flex items-center gap-3 py-2 px-4 -mx-4 rounded-lg
                    hover:bg-[#FEEBDD]/10 transition-all duration-300
                    opacity-0 translate-y-8"
              style={`transition-delay: ${index * 100}ms`}
            >
              <div
                class="shrink-0 w-6 h-6 flex items-center justify-center
                          bg-[#FEEBDD]/20 group-hover:bg-[#FEEBDD]/30
                          rounded-md transition-all duration-300
                          group-hover:translate-x-1"
              >
                <Icon
                  name="arrow-right"
                  class="w-4 h-4 text-[#FEEBDD] transition-transform duration-300 group-hover:scale-110"
                />
              </div>

              <span
                class="text-[#FFF9F6] text-xl md:text-2xl font-bold
                          group-hover:text-[#FEEBDD] transition-colors duration-300
                          group-hover:translate-x-1"
              >
                {item.label}
              </span>

              <div
                class="ml-auto w-0 h-0.5 bg-[#FEEBDD]
                          group-hover:w-8 transition-all duration-500 rounded-full"
              />
            </a>
          ))
        }

        <div class="flex justify-center items-center w-full md:hidden mt-20">
          <ContacButton />
        </div>

        <!-- Separador derecho -->
        <div
          class="absolute right-0 top-0 bottom-0 w-px bg-linear-to-b from-transparent via-[#FEEBDD]/30 to-transparent"
        >
        </div>
      </div>

      <!-- Columna 3: Procedimientos - OCULTA EN MÓVIL -->
      <div
        class="h-full flex-col items-center justify-start px-4 py-6 relative overflow-hidden hidden md:flex bg-[#513A31]/20"
      >
        <!-- Contenedor con scroll interno -->
        <div
          class="w-full h-full overflow-y-auto scrollbar-custom flex flex-col gap-4 pr-2"
        >
          {
            topServices.map((item, __index) => (
              <Procedures
                image={item.image}
                title={item.title}
                slug={item.slug}
              />
            ))
          }
        </div>

        <!-- Separador vertical -->
        <div
          class="absolute right-0 top-0 bottom-0 w-px bg-linear-to-b from-transparent via-[#FEEBDD]/30 to-transparent"
        >
        </div>
      </div>

      <!-- Columna 4: Contacto - VISIBLE EN MÓVIL -->
      <div class="h-full relative overflow-hidden">
        <div
          class="h-full flex flex-col items-start justify-center gap-4 md:gap-6 px-6 md:px-10 relative"
        >
          <div class="text-[#FFF9F6] text-xl md:text-2xl font-bold">
            <div>
              <span
                class="text-[#FEEBDD] text-xs md:text-sm font-semibold tracking-widest uppercase"
              >
                {t.navbar.contact.title}
              </span>
              <h2
                class="text-xl md:text-2xl font-bold text-[#FFF9F6] mt-2 md:mt-4 mb-4 md:mb-6"
              >
                {t.navbar.contact.subtitle}
              </h2>

              <div class="space-y-4 md:space-y-6">
                <ContactData
                  icon="phone"
                  title={t.navbar.contact.phone}
                  value="+57 3131231233"
                />
                <ContactData
                  icon="mail"
                  title={t.navbar.contact.email}
                  value="info@esteticaelite.com"
                />
                <ContactData
                  icon="map-pin"
                  title={t.navbar.contact.location}
                  value="Cartagena"
                />
              </div>
            </div>
          </div>
        </div>

        <!-- Decoración -->
        <div
          class="absolute inset-0 pointer-events-none opacity-50 md:opacity-100"
        >
          <div
            class="absolute top-1/4 right-1/4 w-40 h-40 md:w-64 md:h-64 bg-[#FEEBDD]/10 rounded-full blur-3xl"
          >
          </div>
          <div
            class="absolute bottom-1/4 left-1/4 w-60 h-60 md:w-96 md:h-96 bg-[#FEEBDD]/5 rounded-full blur-3xl"
          >
          </div>
        </div>
        <div class="logo"></div>
      </div>
    </div>
  </div>
</div>

<script>
  function initMenu() {
    const navbar = document.getElementById("main-navbar");
    const hamburgerBtn = document.getElementById("hamburger-btn");
    const hamburger = hamburgerBtn?.querySelector(".hamburger");
    const fullscreenMenu = document.getElementById("fullscreen-menu");
    const menuLinks = fullscreenMenu?.querySelectorAll(".menu-link");

    // Calcular altura del navbar y setear variable CSS
    if (navbar && fullscreenMenu) {
      const navbarHeight = navbar.offsetHeight;
      fullscreenMenu.style.setProperty("--navbar-height", `${navbarHeight}px`);
    }

    let isOpen = false;

    function toggleMenu() {
      isOpen = !isOpen;

      // Toggle clases
      hamburger?.classList.toggle("is-active");
      fullscreenMenu?.classList.toggle("open");
      document.body.classList.toggle("menu-open");

      // Actualizar aria
      hamburgerBtn?.setAttribute("aria-expanded", String(isOpen));
    }

    // Click en el botón hamburger
    if (hamburgerBtn) {
      hamburgerBtn.addEventListener("click", (e) => {
        e.preventDefault();
        toggleMenu();
      });
    }

    // Cerrar al hacer click en un link
    menuLinks?.forEach((link) => {
      link.addEventListener("click", () => {
        if (isOpen) toggleMenu();
      });
    });

    // Cerrar con ESC
    document.addEventListener("keydown", (e) => {
      if (e.key === "Escape" && isOpen) {
        toggleMenu();
      }
    });

    // Recalcular altura al redimensionar
    window.addEventListener("resize", () => {
      if (navbar && fullscreenMenu) {
        const navbarHeight = navbar.offsetHeight;
        fullscreenMenu.style.setProperty(
          "--navbar-height",
          `${navbarHeight}px`
        );
      }
    });

    let lastScrollTop = 0;
    const scrollThreshold = 10;
    let ticking = false;

    function updateNavbarVisibility() {
      const scrollTop =
        window.pageYOffset || document.documentElement.scrollTop;

      if (isOpen) {
        ticking = false;
        return;
      }

      const scrollDifference = Math.abs(scrollTop - lastScrollTop);

      if (scrollDifference >= scrollThreshold) {
        if (scrollTop > lastScrollTop && scrollTop > 80) {
          navbar?.classList.add("-translate-y-full");
        } else if (scrollTop < lastScrollTop) {
          navbar?.classList.remove("-translate-y-full");
        }

        lastScrollTop = scrollTop <= 0 ? 0 : scrollTop;
      }

      ticking = false;
    }

    window.addEventListener(
      "scroll",
      () => {
        if (!ticking) {
          window.requestAnimationFrame(updateNavbarVisibility);
          ticking = true;
        }
      },
      { passive: true }
    );
  }

  if (document.readyState === "loading") {
    document.addEventListener("DOMContentLoaded", initMenu);
  } else {
    initMenu();
  }

  document.addEventListener("astro:page-load", initMenu);
</script>

<style is:global>
  /* Estilos del hamburger con nueva paleta */
  .hamburger-inner,
  .hamburger-inner::before,
  .hamburger-inner::after {
    background-color: #feebdd !important;
  }

  .hamburger-btn:hover .hamburger-inner,
  .hamburger-btn:hover .hamburger-inner::before,
  .hamburger-btn:hover .hamburger-inner::after {
    background-color: #fff9f6 !important;
  }

  /* Cuando el menú está abierto */
  #fullscreen-menu.open {
    opacity: 1;
    visibility: visible;
  }

  #fullscreen-menu.open .menu-link,
  #fullscreen-menu.open > div > div:nth-child(3) {
    opacity: 1;
    transform: translateY(0);
    transition:
      opacity 0.6s ease-out,
      transform 0.6s ease-out;
  }

  /* Prevenir scroll cuando el menú está abierto */
  body.menu-open {
    overflow: hidden;
  }

  /* Responsive: En móvil mostrar solo 1 columna */
  @media (max-width: 768px) {
    #fullscreen-menu > div {
      grid-template-columns: 1fr;
      grid-template-rows: auto 1fr auto;
    }

    #fullscreen-menu > div > div:first-child {
      display: none;
    }

    #fullscreen-menu > div > div:last-child {
      display: none;
    }
  }

  /* Efecto de entrada escalonada */
  #fullscreen-menu.open .menu-link-wrapper {
    opacity: 1;
    transform: translateY(0);
    transition:
      opacity 0.6s ease-out,
      transform 0.6s ease-out;
  }

  /* Efecto de brillo en hover */
  .menu-link-wrapper::before {
    content: "";
    position: absolute;
    left: -4px;
    top: 50%;
    transform: translateY(-50%);
    width: 3px;
    height: 0;
    background: linear-gradient(to bottom, transparent, #feebdd, transparent);
    border-radius: 2px;
    transition: height 0.3s ease;
  }

  .menu-link-wrapper:hover::before {
    height: 60%;
  }

  /* Animación del icono */
  @keyframes icon-pulse {
    0%,
    100% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.1);
    }
  }

  .menu-link-wrapper:hover svg {
    animation: icon-pulse 1s ease-in-out infinite;
  }

  /* Scrollbar personalizado */
  .scrollbar-custom::-webkit-scrollbar {
    width: 6px;
  }

  .scrollbar-custom::-webkit-scrollbar-track {
    background: #7d6a5d;
    border-radius: 10px;
  }

  .scrollbar-custom::-webkit-scrollbar-thumb {
    background: #feebdd;
    border-radius: 10px;
  }

  .scrollbar-custom::-webkit-scrollbar-thumb:hover {
    background: #d6c4b6;
  }

  .logo {
    /* 1. Posicionamiento: Usamos 'absolute' para fijarlo a la esquina */
    position: absolute;

    /* 2. Dimensiones: Necesitas un tamaño para que la imagen se muestre */
    width: 100px;
    height: 100px;

    /* 3. Colocación en la esquina inferior derecha */
    /* Fija el elemento a 20px del borde inferior y 20px del borde derecho */
    bottom: 20px;
    right: 20px;

    /* 4. Imagen de fondo */
    background: url("/src/assets/images/logo.png");
    background-size: 100% 100%; /* El 100% hace que la imagen llene el espacio de 100x100px */
    background-repeat: no-repeat; /* Asegura que no se repita */
}
</style>
